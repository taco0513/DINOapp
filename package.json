{
  "name": "dino-v3",
  "version": "3.0.0-alpha.1",
  "description": "DINO v3.0 - Real-time Dashboard Platform for Digital Nomads",
  "keywords": [
    "dashboard",
    "travel",
    "nomad",
    "real-time",
    "pwa"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:safe": "npm run type-check && npm run lint && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:gmail": "tsc --project tsconfig.gmail.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "risk-check": "node scripts/risk-prevention.js",
    "zero-defects-check": "npm run type-check && npm run lint",
    "check:all": "npm run zero-defects-check && npm run test && npm run risk-check",
    "pre-deploy": "npm run type-check && npm run lint && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.13.0",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "next": "14.2.31",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "prisma": "^6.13.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}

{
  "extends": "next/core-web-vitals",
  "rules": {
    // TypeScript specific
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // General JavaScript
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "always"],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],

    // Code quality
    "no-console": "warn",
    "no-debugger": "error",
    "no-alert": "warn", // Allow alerts during development

    // React specific
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "warn"
  }
}

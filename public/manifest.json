  "shortcuts": [
    {
      "name": "여행 기록 추가",
      "short_name": "새 여행",
      "description": "새로운 여행 기록을 추가합니다",
      "url": "/trips?action=add",
      "icons": [{ "src": "/icons/shortcut-add.png", "sizes": "96x96" }]
    },
    {
      "name": "셰겐 계산기",
      "short_name": "셰겐",
